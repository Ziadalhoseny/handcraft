            <a class="nav-link text-dark" asp-area="" asp-controller="workshops" asp-action="Index">workshops</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="cont" asp-action="contact">contact</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="about" asp-action="About_Us">about us</a>
            <form class="srch">
                <input class="srch1" type="search" placeholder="Search...">
                <button class="bs" type="submit">Search</button>
            </form>
            <a href="#" ><img class="img1" src="~/img/a.jpg" alt="" width="40px" height="40px"></a>
            <a href="#"><img class="img2" src="~/img/b.jpg" alt="" width="40px" height="40px"></a>
